# Taruvi Integration Test Configuration
# Copy this file to .env and fill in your values

# Backend URL (local, dev, or staging)
TARUVI_API_URL=http://localhost:8000/sites/appbuild/

# Authentication (choose ONE method)
# Option 1: API Key (recommended)
TARUVI_API_KEY=your_knox_api_key_here

# Option 2: Username + Password (auto-login)
# TARUVI_USERNAME=your_username
# TARUVI_PASSWORD=your_password

# Option 3: JWT Token
# TARUVI_JWT=your_jwt_token_here

# Test Organization/Site/App
TARUVI_TEST_APP_SLUG=test-app

# Test function name (for function integration tests)
TARUVI_TEST_FUNCTION_NAME=test-function

# Optional: Admin credentials for setup/teardown
TARUVI_ADMIN_API_KEY=your_admin_api_key

# Auth Tests - Test user credentials (for test_auth_integration.py)
TARUVI_TEST_USERNAME=test_user
TARUVI_TEST_PASSWORD=test_password
# TARUVI_REFRESH_TOKEN=your_refresh_token (optional)

# Test Configuration
RUN_INTEGRATION_TESTS=1
